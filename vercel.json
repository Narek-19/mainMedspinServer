{
  "version": 2,
  "builds": [
    {
      "src": "./src/index.js",
      "use": "@vercel/node"
    },
    {
      "src":"public/**",
      "use":"@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "public/topCourses/",
      "dest": "public/topCourses/(.*)",
      "headers": { "Cache-Control": "public, max-age=86400" },
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "src/",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src":"/(.+)",
      "dest":"public/$1"
    }
  ]
}
